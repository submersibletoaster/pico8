-- rendering
x=1
y=2
z=3

cube={
  {-20,-20,-20},
  {20,-20,-20},
  {20,-20,20},
  {-20,-20,20},
  {-20,20,20},
  {-20,20,-20},
  {20,20,-20},
  {20,20,20}
}

function rot3d(node,th)

  sin_t = sin(th)
  cos_t = cos(th)
  
  local r={}
  r[x] = (node[x] * cos_t)
          - (node[z] * sin_t);
  r[z] = (node[z] * cos_t) 
          + (node[x] * sin_t);
  r[y] = node[y]
  return r  
end

sqrt2 = sqrt(2)
sqrt6 = sqrt(6)

function proj2d(vec)
local  r={}
 r[x] = ( vec[x]-vec[z])/sqrt2;
 r[y] = (vec[x]+2*vec[y]+vec[z])/sqrt6;
 return r
end

function dr_cube()
  camera(-32,-42)
  proj={}

  for n = 1,#cube do
    local r = proj2d(
      rot3d(
        cube[n], theta
      )
      )
    proj[n] = r
    pset(r[x],r[y],10)
  end

end
