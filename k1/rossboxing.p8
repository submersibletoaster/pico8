pz={
 {hd=72,col={8,2} },
 {hd=70,col={12,1} },
 {hd=72,col={11,3} },
}

function dr_player(n,pos,flp)
  flp=flp or false
  -- body
  if flp then
    pal(8,pz[n].col[2] )
    pal(2,pz[n].col[1] )
  else
    pal(8,pz[n].col[1] )
    pal(2,pz[n].col[2] )
  end
  
  spr(100,pos.x,pos.y+10,2,2,flp)
  -- head
  
  pset()
  
  spr(pz[n].hd,
    pos.x,pos.y,2,2,flp)
end
