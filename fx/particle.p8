-- vec
v3d={
__add=function(a,b)
  local t={
   x=a["x"]+b["x"],
   y=a["y"]+b["y"],
   z=a["z"]+b["z"],
  }
  return v3d.new(t)
end,
__sub=function(a,b)

end,
__mul=function(a,b)
  local t={
   x=a["x"]*b["x"],
   y=a["y"]*b["y"],
   z=a["z"]*b["z"],
  }
  return v3d.new(t)

end
}
v3d.new=function(t)
  assert(type(t)=="table")
  local v={x=t.x,y=t.y,z=t.z}
  setmetatable(v,v3d)
  return v
end
